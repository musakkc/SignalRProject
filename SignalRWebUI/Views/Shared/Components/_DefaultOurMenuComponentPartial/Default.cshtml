@model List<ResultProductDto>
 
@{
    var menuTableId = Context.Request.Cookies["MenuTableId"] ?? "";
} 

<section class="food_section layout_padding-bottom">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Popüler Ürünlerimiz
            </h2>
        </div>
 

        <div class="filters-content">
            <div class="row grid">
                @foreach(var item in Model)
                {
                    <div class="col-sm-6 col-lg-4 all @item.CategoryName">
                    <div class="box">
                        <div>
                            <div class="img-box">
                                <img src="@item.ImageUrl" alt="">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @item.ProductName
                                </h5>
                                <p>
                                    @item.Description
                                </p>
                                <div class="options">
                                    <h6>
                                        @item.Price₺
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    
                }
            </div>
        </div>
        <div class="btn-box">
            <a href="/Menu/Index/@menuTableId">
                Daha Fazlasını Gör
            </a>
        </div>
    </div>
</section>